---
import type { LinkItemInterface } from "../../interfaces/LinkItemInterface";

import LogoComponent from "../LogoComponent.astro";
import NavbarItemComponent from "./NavbarItemComponent.astro";
import ThemeControllerComponent from "./ThemeControllerComponent.astro";

const navbarItems: LinkItemInterface[] = [
  {
    label: "Home",
    path: "/",
  },
  {
    label: "About",
    path: "/about",
  },
  {
    label: "Blog",
    path: "/blog",
  },
];
---

<header>
  <nav>
    <div class="navbar bg-base-200 md:px-8">
      <div class="navbar-start">
        <div class="dropdown">
          <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h8m-8 6h16"
              >
              </path>
            </svg>
          </div>
          <ul
            tabindex="0"
            class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52"
          >
            {
              navbarItems.map((navbarItem) => (
                <NavbarItemComponent {...navbarItem} />
              ))
            }
          </ul>
        </div>
        <LogoComponent />
      </div>

      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
          {
            navbarItems.map((navbarItem) => (
              <NavbarItemComponent {...navbarItem} />
            ))
          }
        </ul>
      </div>

      <div class="navbar-end">
        <ThemeControllerComponent />
      </div>
    </div>
  </nav>
</header>
